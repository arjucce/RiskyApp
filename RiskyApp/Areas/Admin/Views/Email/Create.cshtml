@model RiskyApp.Models.VM.EmailVM


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-group row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>        
        <div class="form-group row">
            <label class="control-label text-info">Select Department</label>
            @Html.DropDownListFor(m => m.DepartmentId, Model.DepartmentList, "Please Select Department", new { @class = "form-control" })
        </div>    
        <div class="form-group row">
            <label class="control-label text-info">Select Reporting Category</label>
            @Html.DropDownListFor(m => m.CategoryId, Model.CategoryList, "Please Select Category", new { @class = "form-control" })
        </div>    
        <div class="form-group row">
            <label asp-for="To" class="control-label"></label>
            <input asp-for="To" data-toggle="tooltip" data-placement="top" title="Please use comma(,) if multiple receipient" class="form-control" />
            <span asp-validation-for="To" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="CC" class="control-label"></label>
            <input asp-for="CC" data-toggle="tooltip" data-placement="top" title="Please use comma(,) if multiple receipient" class="form-control" />
            <span asp-validation-for="CC" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col">
                <input type="submit" value="Submit" class="btn btn-primary form-control" />
            </div>
            <div class="col">
                <a class="btn btn-success form-control" asp-action="Index">Back to List</a>
            </div>            
        </div>
    </form>
</div>




@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

